@{
    Layout = "~/Views/Shared/Master.cshtml";
}

@Html.ActionLink("Cadastrar Novo Aluno", "Cadastro", "Alunos", new { @class = "btn btn-dark float-right mb-2 mt-2" })

<div>
    <div class="container">

        <h2><i class="fas fa-list-ul"></i> @ViewBag.TituloPagina</h2>
       
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-active">
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Nota 1</th>
                    <th>Nota 2</th>
                    <th>Nota 3</th>
                    <th>Frequencia</th>
                    <th>Situação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Lista07MVC.Models.Alunos aluno in @ViewBag.Alunos)
                {
                    <tr id="verifica-situacao" class="">
                        <td>@aluno.Id</td>
                        <td>@aluno.Nome</td>
                        <td>@aluno.Nota_1</td>
                        <td>@aluno.Nota_2</td>
                        <td>@aluno.Nota_3</td>
                        <td>@aluno.Frequencia</td>
                        <td>@aluno.Situacao</td>

                        <td>
                            <a href="/Aluno/Editar?id=@aluno.Id" class="btn btn-outline-success"><i class="fas fa-edit"></i>Editar</a>
                            <a href="/Aluno/Excluir?id=@aluno.Id" class="btn btn-outline-danger"><i class="fa fa-trash"></i>Excluir</a>
                        </td>
                    </tr>
                }

            </tbody>
            <tfoot>

            </tfoot>
        </table>
    </div>

</div>

